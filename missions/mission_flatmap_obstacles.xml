<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <About>
        <Summary>Flatmap with Obstacles</Summary>
    </About>

    <ServerSection>
        <ServerInitialConditions>
            <Time><StartTime>6000</StartTime></Time>
            <Weather>clear</Weather>
        </ServerInitialConditions>
        <ServerHandlers>
            <FlatWorldGenerator generatorString="3;7,2*3,1;2;decoration" />
            <DrawingDecorator>
                <DrawCuboid x1="-11" y1="4" z1="-11" x2="11" y2="10" z2="11" type="air" />
                <DrawCuboid x1="-10" y1="3" z1="-10" x2="10" y2="3" z2="10" type="grass" />

                <DrawCuboid x1="-10" y1="4" z1="-10" x2="10" y2="6" z2="-10" type="stone" /> 
                <DrawCuboid x1="-10" y1="4" z1="10" x2="10" y2="6" z2="10" type="stone" />  
                <DrawCuboid x1="-10" y1="4" z1="-9" x2="-10" y2="6" z2="9" type="stone" />  
                <DrawCuboid x1="10" y1="4" z1="-9" x2="10" y2="6" z2="9" type="stone" />   
                <DrawCuboid x1="-1" y1="4" z1="-1" x2="1" y2="5" z2="1" type="stone" /> 
                <DrawCuboid x1="-5" y1="4" z1="5" x2="5" y2="4" z2="5" type="stone" />  
                <DrawBlock x="8" y="4" z="-8" type="diamond_block" /> 
                <DrawBlock x="-8" y="4" z="8" type="lava" />          
            </DrawingDecorator>
            <ServerQuitFromTimeUp timeLimitMs="45000" />
            <ServerQuitWhenAnyAgentFinishes />
        </ServerHandlers>
    </ServerSection>

    <AgentSection mode="Survival">
        <Name>Dreamer</Name>
        <AgentStart>
            <Placement x="3" y="4" z="0" yaw="0" />
        </AgentStart>
        <AgentHandlers>
            <VideoProducer>
                <Width>336</Width>
                <Height>336</Height>
            </VideoProducer>
            <ContinuousMovementCommands turnSpeedDegs="180"/>
            <RewardForTouchingBlockType>
                <Block type="grass" reward="10" />
            </RewardForTouchingBlockType>
        </AgentHandlers>
    </AgentSection>
</Mission>