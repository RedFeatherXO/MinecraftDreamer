<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<Mission xmlns="http://ProjectMalmo.microsoft.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <About>
        <Summary>Flatmap Collect Diamond</Summary>
    </About>

    <ServerSection>
        <ServerInitialConditions>
            <Time><StartTime>6000</StartTime></Time>
            <Weather>clear</Weather>
        </ServerInitialConditions>
        
        <ServerHandlers>
            <FlatWorldGenerator generatorString="3;7,2*3,2;12;lava_lake" />
            <DrawingDecorator>
                <DrawBlock x="15" y="4" z="15" type="diamond_block" />
                <DrawBlock x="20" y="4" z="-10" type="diamond_block" />
            </DrawingDecorator>
            <ServerQuitFromTimeUp timeLimitMs="30000" />
            <ServerQuitWhenAnyAgentFinishes />
        </ServerHandlers>
    </ServerSection>

    <AgentSection mode="Survival">
        <Name>Dreamer</Name>
        <AgentStart>
            <Placement x="0" y="4" z="0" yaw="0" />
        </AgentStart>

        <AgentHandlers>
            <VideoProducer want_depth="false">
                <Width>336</Width>
                <Height>336</Height>
            </VideoProducer>
            <ContinuousMovementCommands turnSpeedDegs="180"/>
            <RewardForTouchingBlockType>
                <Block type="diamond_block" reward="100" />
            </RewardForTouchingBlockType>
            <RewardForSendingCommand reward="-1" />
            <AgentQuitFromTouchingBlockType>
                <Block type="diamond_block"/>
                <Block type="lava"/>
            </AgentQuitFromTouchingBlockType>
        </AgentHandlers>
    </AgentSection>
</Mission>